                android:background="@drawable/producto_carta"
                android:src="@drawable/toothbrush" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="@string/Cepillo"
                android:textColor="@color/segundo_color_texto"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="@string/DescripcionCepillo"
                android:textColor="@color/segundo_color_texto"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                android:backgroundTint="@color/cuarto_color"
                android:text="@string/agregar"
                android:textColor="@color/primer_color_texto"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
