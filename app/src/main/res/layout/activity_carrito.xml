<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tvCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textColor="@color/primer_color_texto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/ivCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/heart" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvCarrito"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/producto_background"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:background="@drawable/producto_carta"
                    android:scaleType="centerCrop"
                    android:src="@drawable/toothbrush" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:text="@string/Cepillo"
                    android:textColor="@color/primer_color_texto"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@string/DescripcionCepillo"
                    android:textColor="@color/primer_color_texto"/>

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/tercer_color"
                    android:text="@string/Eliminar"
                    android:textColor="@color/segundo_color_texto"
                    android:textStyle="bold"
                    app:cornerRadius="50dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/btnComprar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/cuarto_color"
                android:text="@string/Comprar"
                android:textColor="@color/primer_color_texto"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
